
<h1>Edit Movie</h1>

<%= form_with model: @movie, url: admin_movie_path(@movie), local: true do |form| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :year %><br>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :is_showing %><br>
    <%= form.check_box :is_showing %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <%= link_to 'Delete Movie', [:admin, @movie], method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %>
<% end %>
